<div class="centered-column in-main">
  <svg class="svg-icon"
    viewBox="0 0 75 30"
    style="width:75px; height:30px;">
    <use xlink:href="#juju-logo" />
  </svg>
  <div id="login-form" class="panel">
    <div class="header">
      {{environment_name}}
    </div>
    <div class="form-error">{{error_text}}</div>
    <form>
      <input type="text" {{#if lockAdmin}}disabled="disabled"{{/if}} value="{{user}}" />
      <input type="password" value="" placeholder="Enter password" />
      <input type="submit" value="Login" />
    </form>
  </div>
  <div>{{help_text}}</div>
  <div><a href="https://jujucharms.com/" target="_blank">jujucharms.com</a></div>
</div>
