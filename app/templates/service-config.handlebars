{{> service-header}}
<div class="view-container">
  <form id="service-config" class="form-horizontal">
    <legend>{{service.id}} settings</legend>
      {{> service-config}}
      <div class="control-group">
        <div class="controls">
          <button type="button" id="save-service-config">Update</button>
        </div>
      </div>
  </form>
</div>
<div class="juju-service-info-container-bottom-menu">
  <div class="juju-service-info-container-bottom-menu-wrapper">
    <div class="inline" style="width: 200px">
     <a class="btn" id="destroy-service" data-toggle="modal" 
       href="#destroy-service-modal">Destroy Service</a>
    </div>
  </div>
</div>  
