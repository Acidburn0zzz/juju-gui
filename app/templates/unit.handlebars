<div class="row">
  <div class="well">
    <h1>{{unit.id}}</h1>
    <b>{{service.charm}}</b>
    {{#unit.is_subordinate}} (subordinate){{/unit.is_subordinate}}
    <div>
      {{unit_ip_description}}
      {{#unit_ip_description}}|{{/unit_ip_description}}
      {{#unit_running}}
        <span style="color: green">&#x25B6;</span>
      {{/unit_running}}
      {{^unit_running}}
        <span style="color: red">&#x2b1b;</span>
      {{/unit_running}}
      {{unit.agent_state}}
    </div>
  </div>
<div>

<div class="row">
  <div class="span12">
    <h2>&#x2637; Machine {{unit.machine}}</h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <th>agent-state</th>
          <td>{{machine.agent_state}}</td>
        </tr>
        <tr>
          <th>instance-id</th>
          <td>{{machine.instance_id}}</td>
        </tr>
        <tr>
          <th>instance-state</th>
          <td>{{machine.instance_state}}</td>
        </tr>
        <tr>
          <th>public-address</th>
          <td>{{machine.public_address}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="span12">
    <h2>&#x26B9; Relations</h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <th>id</th>
          <th>endpoint</th>
          <th>name</th>
          <th>role</th>
          <th>scope</th>
        </tr>
        {{#service.rels}}
          <tr>
            <td>{{ident}}</td>
            <td>{{endpoint}}</td>
            <td>{{name}}</td>
            <td>{{role}}</td>
            <td>{{scope}}</td>
          </tr>
        {{/service.rels}}
      </tbody>
    </table>
  </div>
</div>
