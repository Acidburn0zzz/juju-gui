<div class="row">
  <div class="well">
    <h1 id="unit-id">{{unit.id}}</h1>
    <b id="charm-uri">{{service.charm}}</b>
    {{#unit.is_subordinate}} (subordinate){{/unit.is_subordinate}}
    <div id="unit-status">
      {{unit_ip_description}}
      {{#unit_ip_description}}|{{/unit_ip_description}}
      {{#unit_running}}
        <span style="color: green">&#x25B6;</span>
      {{/unit_running}}
      {{^unit_running}}
        <span style="color: red">&#x2b1b;</span>
      {{/unit_running}}
      {{unit.agent_state}}
    </div>
  </div>
<div>

<div class="row">
  <div class="span12">
    <h2 id="machine-name">&#x2637; Machine {{unit.machine}}</h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <th>agent-state</th>
          <td id="machine-agent-state">{{machine.agent_state}}</td>
        </tr>
        <tr>
          <th>instance-id</th>
          <td id="machine-instance-id">{{machine.instance_id}}</td>
        </tr>
        <tr>
          <th>instance-state</th>
          <td id="machine-instance-state">{{machine.instance_state}}</td>
        </tr>
        <tr>
          <th>public-address</th>
          <td id="machine-public-address">{{machine.public_address}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div id="relations" class="row">
  <div class="span12">
    <h2>&#x26B9; Relations</h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <th>id</th>
          <th>endpoint</th>
          <th>name</th>
          <th>role</th>
          <th>scope</th>
        </tr>
        {{#service.rels}}
          <tr>
            <td class="relation-ident">{{ident}}</td>
            <td class="relation-endpoint">{{endpoint}}</td>
            <td class="relation-name">{{name}}</td>
            <td class="relation-role">{{role}}</td>
            <td class="relation-scope">{{scope}}</td>
          </tr>
        {{/service.rels}}
      </tbody>
    </table>
  </div>
</div>
