<div>
  {{#unless isSubordinate}}
  <div class="ghost-config-wrapper">
    <div class="ghost-config-header">Service details</div>
    <div class="ghost-config-content">
      <input class="config-field" type="text" name="number-units" value="1"/>
      <label for="number-units">Minimum units</label>
    </div>
  </div>
  {{/unless}}
  {{#if settings}}
  <!-- Service configuration form -->
  <div class="ghost-config-wrapper">
    <div class="ghost-config-header">Configuration</div>
    <div class="ghost-config-content">
      <div class="default-config-toggle">
        <span>Use the default configuration?</span>
        <div class="toggle-switch"></div>
      </div>
        <div class="config-file">
        <input type="file">
        <div class="fakebutton">Import config file...</div>
      </div>

      <form class="charm-settings">
        <div class="service-config">
          {{> service-configuration}}
        </div>
      </form>
    </div>
  </div>
  {{/if}}
</div>
