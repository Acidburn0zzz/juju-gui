<div class="content">
  <div class="notifications"></div>
  <!-- without setting the height of the svg element here it defaults
   to 100% of the available space causing an undesirable flash of
   incorrectly calculated height -->
  <svg class="statusbar" data-bind="aggregated_status" height="18"></svg>
</div>
<div class="content yui3-g unit-scaling">
  <div class="yui3-u">
    <div class="current-unit-num-wrapper yui3-g">
      <div class="current-unit-num yui3-u" data-bind="unit_count"></div>
      <div class="units-starting-spinner yui3-u"></div>
    </div>
  </div>
  <div class="yui3-u">
    <span>of</span>
  </div>
  <div class="yui3-u">
    <div>
      <input type="text" class="num-units-control" value="{{unit_count}}"/>
    </div>
  </div>
  <div class="unit-constraints-confirm closed"></div>
</div>
<h3>Units</h3>
<ul class="overview-unit-list" data-bind="units">
</ul>
{{>service-destroy}}
