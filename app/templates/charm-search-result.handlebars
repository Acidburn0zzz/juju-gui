<div class="picker charm-filter-picker">
  <img class="picker-edge" src="/juju-ui/assets/images/picker_left_edge.png" />
  <div class="picker-expanded">
    <img class="picker-edge" src="/juju-ui/assets/images/view_left_edge.png" />
    <div class="picker-list">
      <ul>
        <li class="active">All charms ({{all_charms_count}})<div class="activetick"></div></li>
        <li>Subordinates ({{subordinate_charms_count}})</li>
        <li>Deployed ({{deployed_charms_count}})</li>
      </ul>
    </div>
    <img class="picker-edge picker-edge-right" src="/juju-ui/assets/images/view_right_edge.png" />
  </div>
  <div class="picker-body">All charms ({{all_charms_count}})</div>
  <i class="picker-button" src="/juju-ui/assets/images/picker_view_right_button_down.png" />
</div>

<div class="search-result-div">

  <div>
    {{#charms}}
    <div class="series-charms">
      <h3>{{series}}</h3>
      <ul class="unstyled">
        {{#charms}}
        <li class="charm-entry">
          <div class="charm-div">
            <button class="btn btn-primary deploy"
             data-url="{{id}}">Deploy</button>
            {{! It is is important that the following 'href' line not be
             broken, or the string processed by the ellipsis module will
             include a lot of whitespace. }}
            <a class="charm-detail"
               href="{{id}}">{{#if owner}}{{owner}}/{{/if}}{{package_name}}</a>
            <div class="charm-summary">{{summary}}</div>
          </div>
        </li>
        {{/charms}}
      </ul>
    </div>
    {{/charms}}
  </div>
</div>
