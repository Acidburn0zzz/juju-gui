{{! Expecting the generated data from extractServiceSettings utility. }}
{{#settings}}
    {{#if isBool}}
        <div class="toggle settings-wrapper">
            <label for="{{name}}-toggle">{{name}}</label>

            <div class="toggle-switch toggle-{{name}}">
                <input type="checkbox"
                       name="{{name}}"
                       class="hidden-checkbox {{name}}-toggle config-field"
                       data-bind="{{#if ../../ghost}}options{{else}}config{{/if}}.{{name}}"
                       {{#if_eq value 'checked'}}checked="checked"{{/if_eq}}
                       {{#if ../../ghost}}disabled{{/if}}
                       id="input-{{name}}">
                <label for="{{name}}-toggle" class="light">
                  <div class="handle"></div>
                </label>
            </div>
            <div class="textvalue"
                 data-skipconflictux=true
                 data-bind="{{#if ../../ghost}}options{{else}}config{{/if}}.{{name}}">
                 {{#if_eq value 'checked'}}true{{else}}false{{/if_eq}}</div>
    {{else}}
      {{#if isNumeric}}
        <div class="settings-wrapper">
        <label for="input-{{name}}">{{name}} ({{type}})</label>
        <div>
          <input
            class="config-field"
            type="text"
            name="{{name}}"
            id="input-{{name}}"
            value="{{value}}"
            data-bind="{{#if ../../../ghost}}options{{else}}config{{/if}}.{{name}}"
            {{#if ../../../ghost}}disabled{{/if}}
          />
        </div>
        {{>conflict-ux}}
      {{else}}
        <div class="settings-wrapper">
        <label for="input-{{name}}">{{name}} ({{type}})</label>
        <div>
          <textarea
            data-bind="{{#if ../../../ghost}}options{{else}}config{{/if}}.{{name}}"
            class="config-field"
            id="input-{{name}}"
            name="{{name}}"
            {{#if ../../../ghost}}disabled{{/if}}
          >{{value}}</textarea>
        </div>
      {{/if}}
      {{>conflict-ux}}
    {{/if}}
   <div class="settings-description">
      {{description}}
    </div>
  </div>
{{/settings}}
{{#unless ghost}}
<div class="yui3-g controls configuration-buttons">
  <div class="yui3-u-1-2">
    <button class="cancel">Cancel</button>
  </div>
  <div class="yui3-u-1-2">
    <button class="confirm">Save Changes</button>
  </div>
</div>
{{/unless}}
