<div class="view-container-wrapper" draggable="true">
  <!-- XXX Remove these ugly inline styles when doing the real layout-->
  <div class="close" style="position: absolute; right: 0; border: 1px solid black; padding: 3px;">X</div>
  <div class="view-container-navigation">
    <!-- XXX There curently isn't UX for returning to the overview from settings -->
    <div class="tab" data-viewlet="overview"
      style="display: inline-block; margin: 0 10px; cursor: pointer;">&larr;</div>
    <!-- Settings control -->
    <div class="tab" data-viewlet="config"
      style="display: inline-block; margin: 0 10px; cursor: pointer;">S</div>
    <!-- Constraints control -->
    <div class="tab" data-viewlet="constraints"
      style="display: inline-block; margin: 0 10px; cursor: pointer;">C</div>
    <!-- Expose control -->
    <div
      style="display: inline-block; margin: 0 10px; cursor: pointer;">E</div>
    <!-- Destroy control -->
    <div
      style="display: inline-block; margin: 0 10px; cursor: pointer;">D</div>
    <!-- XXX Units will be merged with Overview in a future branch -->
    <div class="tab" data-viewlet="units"
      style="display: inline-block; margin: 0 10px; cursor: pointer;">Units</div>
  </div>
  <div class="viewlet-container"></div>
  <div class="view-container-footer"></div>
</div>
