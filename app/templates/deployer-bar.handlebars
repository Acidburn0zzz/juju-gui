<div class="bar">
    <div class="right">
        <div class="pre-summary">
            <span class="import-export">
                <span class="import link">Import</span>
                <span class="export link">Export</span>
                <input type="file" class="import-file" />
            </span>
            <span class="button deploy-button">
                {{#if deployed}}
                    Commit
                {{else}}
                    Deploy
                {{/if}}
            </span>
        </div>
        <div class="post-summary">
            <p>Confirm will deploy all changes</p>
            <span class="button cancel-button">Cancel</span>
            <span class="button confirm-button">Confirm</span>
        </div>
    </div>
    <ul class="action-list">
        <li class="show">
            <a href="" class="link">
                {{ changeCount }} changes
                <span class="expand">
                    <i class="sprite contract_icon more"></i>
                </span>
            </a>
        </li>
        <li class="change">
          <i class="sprite {{ latestChangeDescription.icon }}"></i>
          {{ latestChangeDescription.description }}
          <time>{{ latestChangeDescription.time }}</time>
        </li>
    </ul>
</div>
<aside class="panel changes">
  <header>
    <ul class="action-list right">
        <li>
            <span class="link change-mode min" data-mode="min">
                <i class="sprite DB-expand-01"></i>
            </span>
        </li>
        <li>
            <span class="link change-mode mid" data-mode="mid">
                <i class="sprite DB-expand-02"></i>
            </span>
        </li>
        <li>
            <span class="link change-mode max" data-mode="max">
                <i class="sprite DB-expand-03"></i>
            </span>
        </li>
        <li>
            <span class="link close">
                <i class="sprite DB-close"></i>
            </span>
        </li>
    </ul>
    <ul class="action-list left">
        <li class="hide">
            <a href="" class="link">
                {{ changeCount }} changes
                <span class="contract">
                    <i class="sprite expand_icon less"></i>
                </span>
            </a>
        </li>
        <li>
            <span class="clear-changes">
                <span class="button clear-button disabled">Clear all changes</span>
                <span class="clear-confirm hidden">
                    Are you sure?
                    <span class="button clear-no disabled">No</span>
                    <span class="button clear-yes">Yes</span>
                </span>
            </span>
        </li>
    </ul>
  </header>
  <section></section>
</aside>
<aside class="panel summary">
    <header>
        <span class="deployed-message">The following changes will be deployed</span>
        <span class="clear-changes">
            <span class="button clear-button disabled">Clear all changes</span>
            <span class="clear-confirm hidden">
                Are you sure?
                <span class="button clear-no disabled">No</span>
                <span class="button clear-yes">Yes</span>
            </span>
        </span>
        <ul class="action-list right">
            <li>
                <span class="link close">
                    <i class="sprite DB-close"></i>
                </span>
            </li>
        </ul>
    </header>
    <section></section>
</aside>
<div class="cover"></div>
