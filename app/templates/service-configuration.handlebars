<div class="settings-config">
  <div class="view-container">
    <h2>Service settings</h2>
    <div class="config-file view-content">
      <input type="file">
      <div class="fakebutton">Import config file...</div>
    </div>
    {{> service-configuration}}
  </div>
  {{#unless ghost}}
    <div class="controls configuration-buttons closed">
      <button class="cancel">Discard changes</button>
      <button class="confirm">Save changes</button>
    </div>
  {{/unless}}
</div>
