<div class="charm-token" data-charmid="{{id}}">
  <img url="{{ iconfile }}" />
  <h3 class="title">
    {{ name }}
  </h3>
  <div class="metadata">
    Recent activity:
    <span class="commits">
      {{ recent_commit_count }} {{pluralize 'commit' recent_commit_count}}
    </span>
    <span class="downloads">
      {{ recent_download_count }} {{pluralize 'download' recent_download_count}}
    </span>
  </div>
  <p class="description">{{ description }}</p>
  <button class="hidden">Add</button>
</div>
