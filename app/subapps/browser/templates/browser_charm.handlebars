<div class="charm">
    <div class="nav">
        <a href="">Search Results</a>
        <a href="">Share</a>
        <input class="add" type="button" value="Add" />
    </div>

    <div class="heading">
        <img src="data:image/svg;base64,{{ icon }}" alt="{{ name }} icon">
        {{ name }}
    </div>

    <div class="yui3-g-r">
        <div class="summary yui3-u-1-2">
            <h2>Summary</h2>
            {{ summary }}
            <h2>Description</h2>
            {{ description }}

            <div>
                <a href="#">Source Code</a>
                <a href="{{ code_source.bugs_link }}">Bugs</a>
                {{ code_source.location }}
            </div>
        </div>

        <div class="metadata yui3-u-1-2">
            <div>For {{ distro_series }}</div>
            <div>{{ url }}</div>
            <div>Tested and passed on providers:
                <ul>
                    <li>--</li>
                </ul>
            </div>
            <div><span>{{ downloads_in_past_30_days }}</span> downloads in the
            last 30 days</div>
        </div>
    </div>

    <div class="changelog">
        <span class="toggle">Open Log</span>
    </div>

    <div class="changelog">
    </div>

    <div class="tabs">
        <ul>
            <li><a href="#bws_readme" class="bws_readme">Readme</a></li>
            <li><a href="#bws_interfaces" class="bws_interfaces">Interfaces</a></li>
            <li><a href="#bws_configuration" class="bws_configuration">Configuration</a></li>
            <li><a href="#bws_qa" class="bws_qa">Quality</a></li>
            <li><a href="#bws_hooks" class="bws_hooks">Hooks</a></li>
        </ul>
        <div>
            <div id="bws_readme">Readme</div>
            <div id="bws_interfaces">
                <div class="yui3-g">
                    <div class="yui3-u-1-3">
                        <h3>Requires</h3>
                    </div>
                    <div class="yui3-u-2-3">
                        <h3>Related Charms</h3>
                    </div>
                    <div class="yui3-u-1 yui3-g">
                        {{#if requires}}
                            {{#arrayObject requires}}
                                <div class="yui3-u-1-3 interface">
                                    <div>{{value.interface}}</div>
                                    <div>{{key}}</div>
                                </div>
                                <div class="yui3-u-2-3 related">
                                    ...no related charms yet
                                </div>
                            {{/arrayObject}}
                        {{else}}
                            <p>This charm does not require any interfaces.</p>
                        {{/if}}
                    </div>

                    <div class="yui3-u-1-3">
                        <h3>Provides</h3>
                    </div>
                    <div class="yui3-u-2-3">
                        <h3>Related Charms</h3>
                    </div>
                    <div class="yui3-u-1 yui3-g">
                        {{#if provides}}
                            {{#arrayObject provides}}
                                <div class="yui3-u-1-3 interface">
                                    <div>{{value.interface}}</div>
                                    <div>{{key}}</div>
                                </div>
                                <div class="yui3-u-2-3 related">
                                    ...no related charms yet
                                </div>
                            {{/arrayObject}}
                        {{else}}
                            <p>This charm does not provide any interfaces.</p>
                        {{/if}}

                    </div>
                </div>

            </div>
            <div id="bws_configuration">
                {{#if options}}
                  <dl>
                  {{#arrayObject options}}
                      <dt><dfn>{{key}}</dfn> <em>({{value.type}})</em>
                      <dd>{{value.description}}</dd>
                      <dd>Default: {{value.default}}</dd>
                  {{/arrayObject}}
                  </dl>
                {{else}}
                  <p>This charm does not expose any configuration options.</p>
                {{/if}}
            </div>
            <div id="bws_qa">Quality</div>
            <div id="bws_hooks">
                <div class="yui3-g-r">
                    <div class="yui3-u-1-4">
                        <ul>
                        {{#each files}}
                        <li><a>{{ . }}</a></li>
                        {{/each}}
                        </ul>
                    </div>
                    <div class="yui3-u-3-4">
                        <div class="filecontent">
                          Select a file from the list to view.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
